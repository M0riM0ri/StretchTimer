<!DOCTYPE html>
<html>
  <head>
    <title>Stretch Timer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application' %>
  </head>

  <body>

    <!-- ナビゲーションバー -->
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <div class="container-fluid">

        <!-- ロゴ -->
        <%= link_to image_tag('logo.png', height: '50'), root_path, class: 'navbar-brand' %>
      
        <!-- ログイン時のName表示 -->
        <% if user_signed_in? %>
          <div class="user-name text-white ml-auto">User: <%= current_user.name %></div>
        <% else %>
          <div class="user-name text-white ml-auto">未ログイン</div>
        <% end %>
      
        <!-- 展開ボタン -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- リンク -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item col active">
              <a class="nav-link" href="#">HOME<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item col">
              <a class="nav-link" href="#">ABOUT</a>
            </li>
            <li class="nav-item col">
              <a class="nav-link" href="#">Timer Log</a>
            </li>
            <% if user_signed_in? %>
              <%= content_tag :li, (link_to "Log out", destroy_user_session_path, {method: :delete, class: "nav-link"}), class: "nav-item col" %>
            <% else %>
              <%= content_tag :li, (link_to "Log in", new_user_session_path, class: "post nav-link"), class: "nav-item col" %>
              <%= content_tag :li, (link_to "Sign up", new_user_registration_path, class: "post nav-link"), class: "nav-item col" %>              
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
